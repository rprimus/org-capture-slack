{
  "name": "org-capture-slack",
  "description": "Make org-mode links to slack messages",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "persistent": true,
    "scripts": [
      "background_grab_token.js",
      "background_org_capture_slack.js",
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://*.slack.com/*"],
      "css": ["css/content.css"],
      "js": [
        "content_capture_button.js",
        "content_enhance_slack.js",
      ]
    },
    {
      "js": [ "content_slack_in_browser.js" ],
      "matches": [
        "http://*.slack.com/archives/*",
        "https://*.slack.com/archives/*",
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "https://*.slack.com/api/*"
  ]
}
