{
  "name": "org-capture-slack",
  "description": "Make org-mode links to slack messages",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "persistent": true,
    "scripts": ["js/grabToken.js", "js/orgCaptureSlack.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.slack.com/*"],
      "css": ["content.css"],
      "js": ["js/content_script.js"]
    },
    {
      "js": [ "js/slackinbrowser.js" ],
      "matches": [ "http://*.slack.com/archives/*", "https://*.slack.com/archives/*" ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "https://*.slack.com/api/*"
  ]
}
